# Medical Scribe AI - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Gemini API Key (Required)
# Get your API key from: https://aistudio.google.com/app/apikey
# Gemini powers transcription and documentation workflows in this app
VITE_GEMINI_API_KEY=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Name
# This appears in the browser title and throughout the UI
VITE_APP_NAME=Medical Scribe AI

# Application Version
# Used for cache busting and version display
VITE_APP_VERSION=1.0.0

# Application Environment
# Options: development, staging, production
VITE_APP_ENV=development

# Application Base URL
# Set this if deploying to a subdirectory
VITE_APP_BASE_URL=/

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
VITE_ENABLE_REAL_TIME_TRANSCRIPTION=true
VITE_ENABLE_SPEAKER_DIARIZATION=true
VITE_ENABLE_AUTO_DOCUMENTATION=true
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_SEARCH_FEATURES=true

# Development features
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_A11Y_TESTING=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Auto-save interval in milliseconds (default: 5000 = 5 seconds)
VITE_AUTO_SAVE_INTERVAL=5000

# Session timeout in minutes (default: 30 minutes)
VITE_SESSION_TIMEOUT_MINUTES=30

# Session timeout warning in minutes (default: 5 minutes before timeout)
VITE_SESSION_TIMEOUT_WARNING_MINUTES=5

# Maximum file size for uploads in MB (default: 25MB)
VITE_MAX_FILE_SIZE_MB=25

# Cache TTL in milliseconds (default: 300000 = 5 minutes)
VITE_CACHE_TTL_MS=300000

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# IndexedDB database name
VITE_DB_NAME=medicalScribe

# IndexedDB database version
VITE_DB_VERSION=1

# Maximum number of sessions to keep in memory cache
VITE_MAX_CACHED_SESSIONS=50

# Storage cleanup threshold in days (sessions older than this will be flagged for cleanup)
VITE_STORAGE_CLEANUP_DAYS=90

# =============================================================================
# TRANSCRIPTION CONFIGURATION
# =============================================================================

# Audio recording settings
VITE_AUDIO_SAMPLE_RATE=16000
VITE_AUDIO_CHANNELS=1
VITE_AUDIO_BIT_DEPTH=16

# Transcription chunk size in seconds (how often to send audio for transcription)
VITE_TRANSCRIPTION_CHUNK_SIZE_SECONDS=2

# Minimum silence duration in milliseconds before processing speech
VITE_MIN_SILENCE_DURATION_MS=1000

# Voice activity detection threshold (0.0 to 1.0)
VITE_VAD_THRESHOLD=0.3

# =============================================================================
# DOCUMENTATION CONFIGURATION
# =============================================================================

# AI documentation generation settings
VITE_DOC_GENERATION_DELAY_MS=2000
VITE_DOC_CONFIDENCE_THRESHOLD=0.7
VITE_DOC_MAX_RETRIES=3

# SOAP note template preferences
VITE_DEFAULT_SOAP_TEMPLATE=standard
VITE_ENABLE_CUSTOM_TEMPLATES=true

# Clinical entity extraction settings
VITE_ENABLE_MEDICATION_EXTRACTION=true
VITE_ENABLE_DIAGNOSIS_EXTRACTION=true
VITE_ENABLE_SYMPTOM_EXTRACTION=true
VITE_ENABLE_PROCEDURE_EXTRACTION=true

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Theme settings
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_HIGH_CONTRAST=true

# Animation settings
VITE_ENABLE_ANIMATIONS=true
VITE_ANIMATION_DURATION_MS=300
VITE_ENABLE_REDUCED_MOTION_SUPPORT=true

# Accessibility settings
VITE_DEFAULT_FONT_SIZE=medium
VITE_ENABLE_SCREEN_READER_ANNOUNCEMENTS=true
VITE_ENABLE_KEYBOARD_SHORTCUTS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Content Security Policy (CSP) settings
VITE_ENABLE_CSP=true
VITE_CSP_REPORT_URI=

# Secure headers
VITE_ENABLE_SECURE_HEADERS=true

# Data encryption settings (for sensitive data at rest)
VITE_ENABLE_DATA_ENCRYPTION=true
VITE_ENCRYPTION_KEY_ROTATION_DAYS=30

# Session security
VITE_ENABLE_SESSION_FINGERPRINTING=true
VITE_MAX_CONCURRENT_SESSIONS=3

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging level: error, warn, info, debug
VITE_LOG_LEVEL=info

# Enable error reporting (set to your error reporting service URL)
VITE_ERROR_REPORTING_URL=

# Enable analytics (set to your analytics service configuration)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development server settings
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost

# Hot module replacement
VITE_ENABLE_HMR=true

# Source maps
VITE_ENABLE_SOURCE_MAPS=true

# Bundle analyzer
VITE_ENABLE_BUNDLE_ANALYZER=false

# Mock data for development
VITE_USE_MOCK_DATA=false
VITE_MOCK_API_DELAY_MS=500

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test environment settings
VITE_TEST_TIMEOUT_MS=10000
VITE_ENABLE_TEST_COVERAGE=true

# E2E testing
VITE_E2E_BASE_URL=http://localhost:5173
VITE_E2E_HEADLESS=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build settings
VITE_BUILD_TARGET=es2020
VITE_BUILD_MINIFY=true
VITE_BUILD_SOURCEMAP=false

# CDN settings (if using a CDN for assets)
VITE_CDN_URL=
VITE_ENABLE_CDN=false

# Progressive Web App settings
VITE_ENABLE_PWA=true
VITE_PWA_CACHE_STRATEGY=networkFirst

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# External service integrations (if applicable)
VITE_ENABLE_EXTERNAL_INTEGRATIONS=false

# Webhook URLs for notifications (if applicable)
VITE_WEBHOOK_URL=

# Third-party service API keys (add as needed)
# VITE_THIRD_PARTY_SERVICE_KEY=

# =============================================================================
# COMPLIANCE AND AUDIT
# =============================================================================

# Audit logging
VITE_ENABLE_AUDIT_LOGGING=true
VITE_AUDIT_LOG_RETENTION_DAYS=365

# Compliance settings
VITE_HIPAA_COMPLIANCE_MODE=true
VITE_GDPR_COMPLIANCE_MODE=true

# Data retention policies
VITE_DEFAULT_DATA_RETENTION_DAYS=2555  # 7 years for medical records
VITE_ENABLE_AUTOMATIC_DATA_PURGING=false

# =============================================================================
# NOTES
# =============================================================================

# 1. All VITE_ prefixed variables are available in the client-side code
# 2. Never commit actual API keys or sensitive data to version control
# 3. Use different .env files for different environments (.env.development, .env.production)
# 4. Some settings may require application restart to take effect
# 5. Boolean values should be 'true' or 'false' (lowercase)
# 6. Numeric values should be provided without quotes
# 7. URLs should include the protocol (http:// or https://)

# =============================================================================
# QUICK START MINIMAL CONFIGURATION
# =============================================================================
# For a quick start, you only need to set:
# 1. VITE_GEMINI_API_KEY (required for core functionality)
# 2. VITE_APP_NAME (optional, defaults to "Medical Scribe AI")
# 3. VITE_APP_ENV (optional, defaults to "development")
#
# All other settings have sensible defaults and can be configured later.
